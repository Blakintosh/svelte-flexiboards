{
	"name": "svelte-flexiboards",
	"licence": "MIT",
	"version": "0.4.0",
	"description": "The headless drag-and-drop toolkit for Svelte.",
	"scripts": {
		"dev": "pnpm watch",
		"dev:host": "pnpm dev",
		"build": "pnpm package",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "pnpm run package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"watch": "svelte-kit sync && svelte-package --watch",
		"test": "vitest run"
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js",
			"import": "./dist/index.js",
			"require": "./dist/index.js"
		}
	},
	"peerDependencies": {
		"svelte": "^5.0.0"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/package": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^4.0.0",
		"@types/node": "^22.13.5",
		"@vitest/coverage-v8": "^3.0.7",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.0.0",
		"vite": "^5.0.11",
		"vitest": "^3.0.7"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Blakintosh/svelte-flexiboards.git"
	},
	"author": "Blakintosh",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/Blakintosh/svelte-flexiboards/issues"
	},
	"homepage": "https://github.com/Blakintosh/svelte-flexiboards#readme"
}
